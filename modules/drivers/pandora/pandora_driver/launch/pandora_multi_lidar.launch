<launch>
	<arg name="start_angle"  default="135"/>
	<arg name="pandora_camera_port"  default="9870"/>
	<arg name="enable_camera"  default="false"/>
	<arg name="timezone"  default="8"/>
	<arg name="frame_id"  default="velodyne64"/>
        <arg name="left_lidar_topic"  default="/jmc_auto/sensor/hesai40/left/PointCloud2"/>
        <arg name="right_lidar_topic"  default="/jmc_auto/sensor/hesai40/right/PointCloud2"/>	
        <arg name="back_lidar_topic"  default="/jmc_auto/sensor/hesai40/back/PointCloud2"/>
	<arg name="camera0_topic"  default="/jmc_auto/sensor/pandora/camera/front_color"/>
	<arg name="camera1_topic"  default="/jmc_auto/sensor/pandora/camera/front_gray"/>
	<arg name="camera2_topic"  default="/jmc_auto/sensor/pandora/camera/right_gray"/>
	<arg name="camera3_topic"  default="/jmc_auto/sensor/pandora/camera/back_gray"/>
	<arg name="camera4_topic"  default="/jmc_auto/sensor/pandora/camera/left_gray"/>

<group ns="lidar_left">
	<node pkg="pandora_driver" name="pandora_driver" type="pandora_node" output="screen" >
		<param name="pandora_ip" type="string" value="192.168.10.14"/>
		<param name="lidar_recv_port"  type="int" value="2369"/>
		<param name="gps_recv_port"  type="int" value="10110"/>
		<param name="start_angle"  type="double" value="$(arg start_angle)"/>
		<param name="pandora_camera_port"  type="int" value="$(arg pandora_camera_port)"/>
		<param name="enable_camera"  type="boolean" value="$(arg enable_camera)"/>
		<param name="timezone"  type="int" value="$(arg timezone)"/>
		<param name="frame_id"  type="string" value="$(arg frame_id)"/>
		<param name="lidar_topic"  type="string" value="$(arg left_lidar_topic)"/>
		<param name="camera0_topic"  type="string" value="$(arg camera0_topic)"/>
		<param name="camera1_topic"  type="string" value="$(arg camera1_topic)"/>
		<param name="camera2_topic"  type="string" value="$(arg camera2_topic)"/>
		<param name="camera3_topic"  type="string" value="$(arg camera3_topic)"/>
		<param name="camera4_topic"  type="string" value="$(arg camera4_topic)"/>
	</node>
</group>

<group ns="lidar_right">
        <node pkg="pandora_driver" name="pandora_driver" type="pandora_node" output="screen" >
                <param name="pandora_ip" type="string" value="192.168.10.15"/>
                <param name="lidar_recv_port"  type="int" value="2370"/>
                <param name="gps_recv_port"  type="int" value="10111"/>
                <param name="start_angle"  type="double" value="$(arg start_angle)"/>
                <param name="pandora_camera_port"  type="int" value="$(arg pandora_camera_port)"/>
                <param name="enable_camera"  type="boolean" value="$(arg enable_camera)"/>
                <param name="timezone"  type="int" value="$(arg timezone)"/>
                <param name="frame_id"  type="string" value="$(arg frame_id)"/>
                <param name="lidar_topic"  type="string" value="$(arg right_lidar_topic)"/>
                <param name="camera0_topic"  type="string" value="$(arg camera0_topic)"/>
                <param name="camera1_topic"  type="string" value="$(arg camera1_topic)"/>
                <param name="camera2_topic"  type="string" value="$(arg camera2_topic)"/>
                <param name="camera3_topic"  type="string" value="$(arg camera3_topic)"/>
                <param name="camera4_topic"  type="string" value="$(arg camera4_topic)"/>
        </node>
</group>

<group ns="lidar_back">
        <node pkg="pandora_driver" name="pandora_driver" type="pandora_node" output="screen" >
                <param name="pandora_ip" type="string" value="192.168.10.16"/>
                <param name="lidar_recv_port"  type="int" value="2371"/>
                <param name="gps_recv_port"  type="int" value="10112"/>
                <param name="start_angle"  type="double" value="$(arg start_angle)"/>
                <param name="pandora_camera_port"  type="int" value="$(arg pandora_camera_port)"/>
                <param name="enable_camera"  type="boolean" value="$(arg enable_camera)"/>
                <param name="timezone"  type="int" value="$(arg timezone)"/>
                <param name="frame_id"  type="string" value="$(arg frame_id)"/>
                <param name="lidar_topic"  type="string" value="$(arg back_lidar_topic)"/>
                <param name="camera0_topic"  type="string" value="$(arg camera0_topic)"/>
                <param name="camera1_topic"  type="string" value="$(arg camera1_topic)"/>
                <param name="camera2_topic"  type="string" value="$(arg camera2_topic)"/>
                <param name="camera3_topic"  type="string" value="$(arg camera3_topic)"/>
                <param name="camera4_topic"  type="string" value="$(arg camera4_topic)"/>
        </node>
</group>

</launch>
